@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <p></p>
    <h1 style="text-align: center;">
        <strong>Login Form</strong>
        </h1>

    <p style="text-align: center;"><span style="color: #ff0000;">@Model.Message</span></p>

        <form method="post" asp-page="Index">
            <table style="margin-left: auto; margin-right: auto;">
                <tr>
                    <td>Username</td>
                    <td><input type="text" asp-for="@Model.Username" /></td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td><input type="password" asp-for="@Model.Password" /></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td><input type="submit" value="Login" style="height: 3em; width: 50%;"/></td>
                </tr>
            </table>
        </form>
</body>
