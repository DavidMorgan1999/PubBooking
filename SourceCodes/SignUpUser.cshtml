@page
@model WebApplication1.Pages.SignUpUserModel
@{
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign up</title>
</head>
<body>
    <h1 style="text-align: center;"><strong>User Creation Form</strong></h1>
    <p><span style="color: #ff0000;
        white-space: pre-wrap;">@Model.Message</span></p>
    <form method="post" asp-page="SignUpUser">
        <table style="margin-left: auto; margin-right: auto;">
            <tr>
                <td style="text-align: right;">Username</td>
                <td style="text-align: left;"><input type="text" asp-for="@Model.Username" /></td>
            </tr>
            <tr>
                <td style="text-align: right;">Password</td>
                <td style="text-align: left;"><input type="password" asp-for="@Model.Password" /></td>
            </tr>
            <tr>
                <td style="text-align: right;">Confirm Password</td>
                <td style="text-align: left;"><input type="password" asp-for="@Model.ConfirmPassword" /></td>
            </tr>
            <tr>
                <td style="text-align: right;">&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td style="text-align: right;">Title</td>
                <td style="text-align: left;">
                    <select name="title">
                        <option asp-for="@Model.Title">Mr</option>
                        <option asp-for="@Model.Title">Mrs</option>
                        <option asp-for="@Model.Title">Ms</option>
                        <option asp-for="@Model.Title">Mx</option>
                        <option asp-for="@Model.Title">Dr</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">First name</td>
                <td style="text-align: left;"><input type="text" asp-for="@Model.Fname" /></td>
            </tr>
            <tr>
                <td style="text-align: right;">Surname</td>
                <td style="text-align: left;"><input type="text" asp-for="@Model.Sname" /></td>
            </tr>
            <tr>
                <td style="text-align: right;">&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td style="text-align: right;">Email</td>
                <td style="text-align: left;"><input type="text" asp-for="@Model.Email" /></td>
            </tr>
            <tr>
                <td style="text-align: right;">Phone</td>
                <td><input type="text" asp-for="@Model.PhoneNo" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td><input type="submit" value="Create" /></td>
            </tr>
        </table>
    </form>
    </body>
</html>